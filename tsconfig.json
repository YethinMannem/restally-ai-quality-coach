{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "dist",

    // Target env
    "module": "es2022",
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["node", "jest"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Build behavior
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "samples", "tests"]
}
